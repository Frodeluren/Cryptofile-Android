<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_files">

    <fragment
        android:id="@+id/nav_files"
        android:name="net.cryptofile.app.ui.home.HomeFragment"
        android:label="@string/files"
        tools:layout="@layout/fragment_file_list" >
        <action
            android:id="@+id/actionFileDetailFragment"
            app:destination="@id/fileDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/nav_gallery"
        android:name="net.cryptofile.app.ui.gallery.GalleryFragment"
        android:label="@string/pubkey_list"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="net.cryptofile.app.ui.slideshow.SlideshowFragment"
        android:label="@string/prikey_list"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_help"
        android:name="net.cryptofile.app.ui.help.HelpFragment"
        android:label="@string/help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="net.cryptofile.app.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/activity_settings" />

    <fragment
        android:id="@+id/fileDetailFragment"
        android:name="net.cryptofile.app.ui.home.HomeFragment"
        android:label="fragment_file_detail"
        tools:layout="@layout/fragment_file_detail">
    </fragment>

    <fragment
        android:id="@+id/nav_logout"
        android:name="net.cryptofile.app.ui.login.LogoutFragment"
        android:label="@string/logout"
        tools:layout="@layout/activity_login">
    </fragment>

</navigation>